@model Register.Models.Team

@{
    ViewData["Title"] = "Create Team";
}

<h1>Create New Team</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="ClubId" value="@ViewBag.ClubId" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="UserId" value="@ViewBag.UserId" />
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" asp-items="Html.GetEnumSelectList<Category>()" class="form-control"></select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="SeasonId" class="control-label">Season</label>
                <select asp-for="SeasonId" class ="form-control" asp-items="ViewBag.Seasons"></select>
                <span asp-validation-for="SeasonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-3" /> <a asp-action="Index" asp-route-id="@ViewBag.ClubId" class="btn btn-warning ml-3 mt-3">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
