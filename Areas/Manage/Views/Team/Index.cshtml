@model IEnumerable<Register.Models.Team>

@{
    ViewData["Title"] = "Teams";
}

<h4>List of Your Teams</h4>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Team</a>
</p>

@if (Model.Count() > 0)
{
    <table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Season)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Season)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Manage Players & Personnel</a> |
                <a asp-action="Delete" asp-controller="Team" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
}

else
{
<p>
    You do not have any teams yet!
</p>
}

@if (TempData["Error"] != null)
{
    <p class="text-danger">@TempData["Error"]</p>
}


