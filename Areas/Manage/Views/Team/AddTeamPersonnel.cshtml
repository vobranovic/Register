@model TeamPersonnel
@{
    ViewData["Title"] = "AddTeamPersonnel";
}

<form asp-action="ConfirmAddTeamPersonnel">
    <input type="hidden" asp-for="TeamId" value="@ViewBag.TeamId" />
    <div class="form-group">
        <label asp-for="PersonnelId" class="control-label"></label>
        <select asp-for="PersonnelId" class="form-control" asp-items="ViewBag.Personnel"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Add Personnel" class="btn btn-success mt-3 mb-3" /> <a asp-action="Edit" class="btn btn-warning">Cancel</a>
    </div>
</form>

